<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="500dp" /> <!-- Regola questo valore per cambiare la curvatura -->

            <solid android:color="@color/trasparent"/> <!-- Imposta il colore del bottone -->
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="500dp" /> <!-- Regola questo valore per cambiare la curvatura -->


            <solid android:color="#E87870" /> <!-- Imposta il colore del bottone -->
        </shape>
    </item>

</selector>
