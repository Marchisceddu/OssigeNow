<?xml version="1.0" encoding="utf-8"?>
<!--Modificare per decidere come fare il tema del calendario-->
<resources>
    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:calendarTextColor">@color/black</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStylePositive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyleNegative</item>
    </style>

    <style name="DatePickerButtonStylePositive" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>
<!--        <item name="android:fontFamily">@font/comfortaalight</item>-->
<!--        <item name="android:paddingBottom">10dp</item>-->
    </style>

    <style name="DatePickerButtonStyleNegative" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/gray</item>
<!--        <item name="android:fontFamily">@font/comfortaalight</item>-->
<!--        <item name="android:paddingBottom">10dp</item>-->
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="AboutDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#C8191A</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SpinnerTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/capriola</item>
    </style>

</resources>