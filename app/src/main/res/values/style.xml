<?xml version="1.0" encoding="utf-8"?>
<!--Modificare per decidere come fare il tema del calendario-->
<resources>
    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/background</item>
        <item name="android:calendarTextColor">@color/black</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStylePositive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyleNegative</item>
    </style>

    <style name="DatePickerButtonStylePositive" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/background</item>
<!--        <item name="android:fontFamily">@font/comfortaalight</item>-->
<!--        <item name="android:paddingBottom">10dp</item>-->
    </style>

    <style name="DatePickerButtonStyleNegative" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/gray</item>
<!--        <item name="android:fontFamily">@font/comfortaalight</item>-->
<!--        <item name="android:paddingBottom">10dp</item>-->
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="AboutDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#C8191A</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SpinnerTextStyle">
        <item name="android:textSize">23sp</item>
    </style>

    <!--    Calendrio-->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="CalendarTextAppearance">
        <item name="android:textColor">@color/red</item>
    </style>
</resources>